<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thecoffeebrewer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MethodActivity"
            android:label="@string/title_activity_method"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MainActivity"
            android:label="The Coffee Brewer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListOfMethodsActivity"
            android:label="@string/title_activity_list_of_methods"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".BlackCoffeeActivity"
            android:label="@string/title_activity_black_coffee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavouritesActivity"
            android:label="@string/title_activity_favourites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WhiteCoffeeActivity"
            android:label="@string/title_activity_white_coffee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewMethodActivity"
            android:label="@string/title_activity_new_method"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LogsActivity"
            android:label="@string/title_activity_logs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DessertCoffeeActivity"
            android:label="@string/title_activity_dessert_coffee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".HomeScreenActivity"
            android:label="HomeScreenActivity" /> <!-- TODO: Replace with your real AdMob app ID -->
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
    </application>

</manifest>