<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".NewMethodActivity">

    <ImageView
        android:id="@+id/halfrectanglebackground"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/halfrectangle"></ImageView>

    <ImageView
        android:id="@+id/newMethodMethodImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"></ImageView>

    <TextView
        android:id="@+id/newMethodMethodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/newMethodMethodImage"
        android:text="Aeropress"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <Spinner
        android:id="@+id/newMethodNameSpinner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/newMethodMethodName"
        android:background="@drawable/dropdown"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newMethodName"
        android:layout_alignParentTop="@+id/halfrectanglebackground"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="130dp"
        android:text="Name:"
        android:textColor="@color/yellow"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@+id/halfrectanglebackground"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:layout_toEndOf="@+id/newMethodName"
        android:background="@drawable/roundedrectangle"></ImageView>

    <EditText
        android:id="@+id/newMethodNameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="@+id/halfrectanglebackground"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_toEndOf="@+id/newMethodName"
        android:background="@null"
        android:text="Enter method's name"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textCursorDrawable="@null"
        android:textSize="20dp"
        android:textStyle="bold"></EditText>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/wateramountframeyellow"></ImageView>

    <EditText
        android:id="@+id/waterNumberPicker"
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="190dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:text="250g"
        android:textAlignment="center"
        android:theme="@style/AppTheme.Picker"></EditText>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_toEndOf="@+id/waterNumberPicker"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/coffeeamountframeyellow"></ImageView>

    <EditText
        android:id="@+id/coffeeNumberPicker"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="190dp"
        android:layout_toEndOf="@+id/waterNumberPicker"
        android:background="@null"
        android:inputType="numberDecimal"
        android:text="15g"
        android:textAlignment="center"
        android:theme="@style/AppTheme.Picker"></EditText>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/temperatureframeyellow"></ImageView>

    <EditText
        android:id="@+id/temperatureNumberPicker"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="280dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:text="98C"
        android:textAlignment="center"
        android:theme="@style/AppTheme.Picker"></EditText>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:layout_toEndOf="@+id/waterNumberPicker"
        android:background="@drawable/timeframeyellow"></ImageView>

    <EditText
        android:id="@+id/timeNumberPicker"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="280dp"
        android:layout_toEndOf="@+id/waterNumberPicker"
        android:background="@null"
        android:inputType="numberDecimal"
        android:text="2:30"
        android:textAlignment="center"
        android:theme="@style/AppTheme.Picker"></EditText>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/grindsizeframeyellow"></ImageView>

    <TextView
        android:id="@+id/grindSizePicker"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="@+id/newMethodNameEditText"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="377dp"
        android:text="Medium-coarse"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

    <Spinner
        android:id="@+id/newMethodGrindSizeSpinner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="380dp"
        android:layout_toEndOf="@+id/grindSizePicker"
        android:background="@drawable/dropdownyellow"></Spinner>

    <Button
        android:id="@+id/addRecipeButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="153dp"
        android:layout_marginTop="450dp"
        android:background="@color/yellow"
        android:text="Create"
        android:textSize="25dp"
        android:textStyle="bold"></Button>

</RelativeLayout>
